@page

@using Abp.Application.Services.Dto
@using Abp.Notifications;
@using Library.Web.Startup;
@using Library.LibraryService.Dto;
@using Library.LibraryService;
@using Library.Web.Startup;
@using Library.LibraryService


@using Library.BookManage
@using Library.BookManage.Dto
@using Library.Sessions
@using Library.Authorization.Accounts


@inject ILibraryAppService LibraryAppService
@inject ILibraryManageAppService LibraryManageAppService
@inject IBookAppService BookAppService
@inject IAccountAppService AccountAppService
@{
    ViewBag.CurrentPageName = PageNames.PersonnalInformation;
}
@functions
{

    public async Task<IActionResult> OnPostAsync()
    {

        await LibraryAppService.GetUserBook();//获取当前用户借书情况（所有未还的图书）
        await LibraryAppService.GetBorrowRecords();//获取借阅记录，包含当前正在借的和已经还了的所有图书
        await AccountAppService.GetUserInformation();//获取用户信息
        return new RedirectToRouteResult(null);
    }


}
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">


            <div class="header">
                <h2>
                    Personal Information
                </h2>
                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">more_vert</i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li><a id="RefreshButton" href="javascript:void(0);" class="waves-effect waves-block"><i class="material-icons">refresh</i>Refresh</a></li>
                        </ul>
                    </li>
                </ul>
            </div>


            <div class="body table-responsive">
                <table class="table">
                    @{
                        var user = await AccountAppService.GetUserInformation(); //获取用户信息
                    }
                    @{ 
                    <tbody>
                        <tr>
                            <th scope="row">UserName</th>
                            <td>@user.UserName</td>
                        </tr>
                        <tr>
                            <th scope="row">Name</th>
                            <td>@user.Name</td>
                        </tr>
                        <tr>
                            <th scope="row">Surname</th>
                            <td>@user.Surname</td>
                        </tr>
                        <tr>
                            <th scope="row">EmailAddress</th>
                            <td>@user.EmailAddress</td>
                        </tr>
                        <tr>
                            <th scope="row">RoleNames</th>
                            <td>@user.RoleNames</td>
                        </tr>


                    </tbody>}
                    
                    
                </table>
            </div>




        </div>
    </div>
</div>



<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    Borrowed Current
                </h2>
                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">more_vert</i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li><a id="RefreshButton" href="javascript:void(0);" class="waves-effect waves-block"><i class="material-icons">refresh</i>Refresh</a></li>
                        </ul>
                    </li>
                </ul>
            </div>


            <div class="body table-responsive">
                <table class="table" id="table">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Author</th>
                            <th>Isbn</th>
                            <th>BorrowedDate</th>
                            <th>DateToReturn</th>
                            <th>CopyId</th>
                        </tr>
                    </thead>

                    <tbody>
                        @{
                            var res = await LibraryAppService.GetUserBook(); //获取当前用户借书情况（所有未还的图书）
                        }
                        @foreach (var item in res.Items)
                        {
                            <tr>
                                <td>@item.Title</td>
                                <td>@item.Author</td>
                                <td>@item.Isbn</td>
                                <td>BorrowedDate</td>
                                <td>ReturnedDate</td>
                                <td>CopyId</td>
                            </tr>
                        }
                    </tbody>

                </table>

            </div>
        </div>
    </div>
</div> 



<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    Borrow  History
                </h2>
                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">more_vert</i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li><a id="RefreshButton" href="javascript:void(0);" class="waves-effect waves-block"><i class="material-icons">refresh</i>Refresh</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="body table-responsive">
                <table class="table" id="table">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Author</th>
                            <th>Isbn</th>
                            <th>BorrowedDate</th>
                            <th>ReturnedDate</th>
                            <th>CopyId</th>
                        </tr>
                    </thead>
                    
                    <tbody>
                        @{
                            var res1 = await LibraryAppService.GetBorrowRecords(); //获取借阅记录，包含当前正在借的和已经还了的所有图书
                        }
                       
                        @foreach (var item in res1.Items)
                        {
                            <tr>
                                <td>@item.Title</td>
                                <td>@item.Author</td>
                                <td>@item.Isbn</td>
                                <td>BorrowedDate</td>
                                <td>ReturnedDate</td>
                                <td>CopyId</td>
                            </tr>
                        }
                    </tbody>

                </table>

            </div>
        </div>
    </div>
</div>
